)PANEL
)ATTR
. TYPE(PT)                  /* PANEL TITLE */
% TYPE(ET)                  /* EMPHASIZED TEXT */
+ TYPE(NT)                  /* NORMAL TEXT */
_ TYPE(NEF)                 /* NORMAL ENTRY FIELD */
$ TYPE(AB)                  /* ACTION BAR */
@ TYPE(ABSL)                /* ACTION BAR SEPARATOR LINE */
)ABC DESC(MENU)
PDC DESC('EXIT') ACTION RUN(EXIT)
)ABCINIT
.ZVARS = 'MENUX'
)ABC DESC(HELP)
PDC DESC('EXTENDED HELP...') ACTION RUN(HELP)
)ABCINIT
.ZVARS = 'HELPX'
)BODY
+& MENU & HELP +
@---------------------------------------------------------------------+
.SCHEDULER
%===>_ZCMD  +
+ENTER JOB NAME:_JOBNAME                                     +
+ENTER TIME    :_TIME+
)PROC
*REXX(*,JOBNAME,TIME)
UPPER ZCMD
CPOS = "'ZCMD'"
IF JOBNAME = '' THEN DO
  SAY 'JOBNAME FIELD IS EMPTY'
END
IF TIME = '' THEN DO
  SAY 'TIME FIELD IS EMPTY'
END
IF LENGTH(JOBNAME) > 44 THEN DO
  SAY 'JOBNAME FIELD IS TOO LONG'
END
IF LENGTH(TIME) > 4 THEN DO
  SAY 'TIME FIELD IS TOO LONG'
END
IF ZCMD = 'ADD' & JOBNAME \= ''& TIME \= '' THEN DO
  SAY 'JOB ADDED TO SCHEDULE'
  JOBNAME = LEFT(JOBNAME,44,' ')
  JOBINFO = JOBNAME||TIME||'ADD   '
  ADDRESS LINKPGM 'SCHEDMNG JOBINFO'
END
IF ZCMD = 'EXIT' THEN DO
  SAY 'GOODBYE...'
END
IF ZCMD = 'HELP' THEN DO
  SAY 'LOOK AT MANUAL...'
END
*ENDREXX
)END
